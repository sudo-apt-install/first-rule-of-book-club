<div class="container">
  <h1 class="mt-5 mb-4">Book Details</h1>
  <div class="row">
    <div class="col-md-4">
      <img src="{{book.coverPhoto}}" alt="Book Cover" class="img-thumbnail" />
    </div>
    <div class="col-md-8">
      <h2>{{book.title}}</h2>
      <p>Author(s): {{book.authors}}</p>
      <p>Publish Date: {{book.publishedDate}}</p>
      <p>Category: {{book.categories}}</p>
      <p>Page Count: {{book.pageCount}}</p>
      <p>Description: {{book.description}}</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="my-4">
        <form id="bookshelf-form">
          <div class="form-row">
            <div class="col-12 mb-3">
              <label for="bookshelf-select">Select Bookshelf</label>
            </div>
            <div class="col-8 col-md-12 mb-3">
              <select class="form-control selectedBookshelf" id="bookshelf-select">
                <option value="">Choose a bookshelf</option>
                {{#each bookshelfNames}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
            </div>
            <div class="col-4 col-md-12">
              <button type="submit" class="btn btn-primary btn-block">Add to Bookshelf</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>




<div>
