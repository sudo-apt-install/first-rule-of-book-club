    <input
      class="form-control mr-sm-2"
      type="search"
      placeholder="Room"
      aria-label="Search"
      id="room-input"
    />
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="room">Join</button>
  </form>
</div>

</div>

