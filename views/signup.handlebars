<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-4">
      <h3 class="mb-4">Welcome</h3>
      <form class="signupForm" action="/api/users/signup">
        <div class="form-group">
          <label for="username">Email</label>
          <input
            type="text"
            class="form-control email-signup"
            id="email"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="text"
            class="form-control usernameLogin"
            id="username"
            placeholder="Enter username"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control passwordLogin"
            id="password"
            placeholder="Enter password"
          />
        </div>
        <a class="btn btn-outline-primary ml-2" href="/login">Sign Up</a>
      </form>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>